<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Card Styles -->
    <!-- Testimonial Card -->
    <style name="testimonial_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/testimonial_card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!-- Image Layout Styles for Testimonial Image-->
    <style name="ellipse_crop">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Styles -->
    <!-- Testimonial Title -->
    <style name="testimonios">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_semibold
        </item>

    </style>

    <!-- Testimonial name -->
    <style name="nombre_y_ap">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_bold
        </item>

    </style>

    <!-- Text Style Ong name   -->
    <style name="text_style_ong_name">

        <item name="android:textSize">
            26.11sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Text Style Login hint -->
    <style name="text_style_hint_login">

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:letterSpacing">
            -0.03
        </item>

        <item name="android:textColor">
            @color/hint_color
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Text Style Login input -->
    <style name="text_style_login_input">

        <item name="android:textSize">
            13sp
        </item>

        <item name="android:letterSpacing">
            -0.03
        </item>

        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Text Style Obligatory field -->
    <style name="text_style_obligatory_field">

        <item name="android:textSize">
            8sp
        </item>

        <item name="android:letterSpacing">
            -0.04
        </item>

        <item name="android:textColor">
            @color/red
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Text Style Button -->
    <style name="text_style_login_button">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.02
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Text Style Account text -->
    <style name="text_style_account">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            -0.03
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_semibold
        </item>

    </style>

    <!-- Testimonial -->
    <style name="testimoniot">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Red button -->
    <style name="text_style_red_button">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

        <item name="android:fontFamily">
            @font/mulish_bold
        </item>

    </style>

    <style name="novedades">
        <item name="android:textSize">
            20px
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="fontFamily">
            @font/poppins
        </item>
    </style>

    <!-- Activity name -->
    <style name="text_style_activity_name">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_semibold
        </item>

    </style>

    <!-- Activity description -->
    <style name="text_style_activity_description">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Input Text Layout Styles -->
    <!-- Input Text Layout Login Field -->
    <style name="InputTextLayoutStyle.App.Login" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="helperTextEnabled">false</item>
        <item name="hintTextAppearance">@style/text_style_hint_login</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LoginComponent</item>
    </style>

    <!-- Input Text Layout Login Field Error -->
    <style name="InputTextLayoutStyle.App.LoginError" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextAppearance">@style/text_style_hint_login</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/red</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">@string/obligatory_field</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LoginComponent</item>
        <item name="helperTextTextAppearance">@style/text_style_obligatory_field</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <!-- Input Text Field Styles -->
    <style name="InputTextFieldStyle.App.Login" parent="text_style_hint_login">
        <item name="hintTextAppearance">@style/text_style_hint_login</item>
    </style>

    <!-- Shape Appearance Styles -->
    <style name="ShapeAppearance.App.LoginComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Button Styles   -->
    <style name="ButtonStyle.App.LoginButton" parent="ShapeAppearanceOverlay.Material3.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.LoginComponent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="splashTheme" parent="Theme.ONGAndroid">

        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>