<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Card Styles -->
    <!-- Testimonial Card -->
    <style name="testimonial_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/testimonial_card_background</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <!-- Image Layout Styles for Testimonial Image-->
    <style name="ellipse_crop">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Text Styles -->
    <!-- Testimonial Title -->
    <style name="testimonios">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_semibold
        </item>

    </style>

    <!-- Testimonial name -->
    <style name="nombre_y_ap">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_bold
        </item>

    </style>

    <!-- Testimonial -->
    <style name="testimoniot">

        <item name="android:textSize">
            10sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

    <!-- Red button -->
    <style name="text_style_red_button">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

        <item name="android:fontFamily">
            @font/mulish_bold
        </item>

    </style>

    <style name="novedades">
        <item name="android:textSize">
            20px
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="fontFamily">
            @font/poppins
        </item>
    </style>

    <!-- Activity name -->
    <style name="text_style_activity_name">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins_semibold
        </item>

    </style>

    <!-- Activity description -->
    <style name="text_style_activity_description">

        <item name="android:textSize">
            12sp
        </item>

        <item name="android:letterSpacing">
            -0.01
        </item>

        <item name="android:textColor">
            #000000
        </item>

        <item name="android:fontFamily">
            @font/poppins
        </item>

    </style>

</resources>